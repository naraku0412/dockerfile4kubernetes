FROM ubuntu:16.04 

ENV etcd_ver v3.3.2
ENV file_server http://172.31.78.216:2121

RUN apt-get update && \
    apt-get install -y curl

# uncompress & rename svc
RUN mkdir -p /opt && \
    cd /opt && \
    curl ${file_server}/etcd-${etcd_ver}-linux-amd64.tar.gz | \
        tar -zx && \
    ln -s etcd-${etcd_ver}-linux-amd64 etcd && \
    echo Etcd ${etcd_ver} installed in /opt

RUN apt-get clean && \ 
    rm -rf /var/lib/apt/lists/* && \
    rm -rf /tmp/* /usr/share/man /usr/share/doc

ADD entrypoint.sh /
